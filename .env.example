# ================================================
# AI Trading System - Environment Configuration
# ================================================
# Copy this file to .env and fill in your values
# NEVER commit the actual .env file to version control

# ========================================
# Security Configuration
# ========================================
# Secret provider: environment, aws_secrets_manager, hashicorp_vault
SECRET_PROVIDER=environment
SECRET_CACHE_TTL=300  # Cache secrets for 5 minutes

# For AWS Secrets Manager (optional)
# AWS_REGION=us-east-1
# AWS_SECRET_NAME=ai-trader-secrets

# ========================================
# Database Configuration (REQUIRED)
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_trader
DB_USER=  # REQUIRED - No default for security
DB_PASSWORD=  # REQUIRED - No default for security

# Connection pool settings (optional)
DATABASE_MIN_POOL_SIZE=5
DATABASE_MAX_POOL_SIZE=20

# ========================================
# Test Database Configuration
# ========================================
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=ai_trader_test
TEST_DB_USER=  # Uses main DB_USER if not set
TEST_DB_PASSWORD=  # Uses main DB_PASSWORD if not set

# ========================================
# Broker Configuration
# ========================================
# Alpaca Trading API (optional for paper trading)
ALPACA_API_KEY=
ALPACA_API_SECRET=
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Polygon Market Data API (optional)
POLYGON_API_KEY=

# ========================================
# Trading Configuration
# ========================================
INITIAL_CAPITAL=100000
MAX_POSITION_SIZE=10000
MAX_PORTFOLIO_CONCENTRATION=0.20

# Risk management
MAX_PORTFOLIO_RISK=0.02  # 2% max portfolio risk
MAX_LEVERAGE=1.0  # No leverage by default

# ========================================
# Application Configuration
# ========================================
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ========================================
# Monitoring Configuration (optional)
# ========================================
# Health checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=8080
