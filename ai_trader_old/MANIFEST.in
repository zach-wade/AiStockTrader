# AI Trader - Package distribution manifest
# Controls what files are included in the source distribution

# Include core project files
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include pyproject.toml
include setup.py
include setup.cfg
include pytest.ini
include tox.ini
include requirements.txt

# Include package metadata
include src/main/py.typed

# Include configuration files
recursive-include src/main/config *.yaml *.yml *.json
recursive-include src/main/config/settings *.yaml *.yml
recursive-include src/main/config/docs *.md

# Include monitoring templates
recursive-include src/main/monitoring/templates *.html *.css *.js

# Include deployment configurations
include deployment/docker/Dockerfile
include deployment/docker/docker-compose.yml
include deployment/scripts/*.sh
recursive-include deployment/kubernetes *.yaml *.yml
recursive-include deployment/terraform *.tf

# Include documentation
recursive-include docs *.md *.rst *.txt *.py
recursive-include docs/api *.md
recursive-include docs/tutorials *.md
recursive-include docs/examples *.py *.md

# Include example configurations
include .env.example
include .gitignore.example

# Include test configuration files
include .pre-commit-config.yaml

# Include scripts
recursive-include scripts *.py *.sh
include scripts/scheduler/*.yaml
include scripts/scheduler/*.conf

# Include necessary data files for tests
recursive-include tests/fixtures *.json *.yaml *.csv
graft tests/fixtures/market_data

# Exclude patterns - things we don't want in the distribution

# Exclude development and local files
exclude .env
exclude .env.*
exclude *.local.*
exclude .coverage
exclude coverage.xml

# Exclude build and cache directories
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude .pytest_cache
global-exclude .mypy_cache
global-exclude .tox
global-exclude *.egg-info
prune build
prune dist

# Exclude data directories that shouldn't be distributed
prune data_lake
prune models/production
prune models/registry
prune models/saved
prune models/trained
prune logs
prune results

# Exclude virtual environments
prune venv
prune env
prune .venv
prune .env

# Exclude IDE and editor files
global-exclude .vscode
global-exclude .idea
global-exclude *.swp
global-exclude *.swo
global-exclude *~

# Exclude temporary and backup files
global-exclude *.tmp
global-exclude *.bak
global-exclude *.backup
global-exclude *~

# Exclude OS-specific files
global-exclude Thumbs.db
global-exclude ehthumbs.db
global-exclude .Spotlight-V100
global-exclude .Trashes

# Exclude version control files
global-exclude .git*
global-exclude .hg*
global-exclude .svn*

# Exclude compressed files (unless specifically needed)
global-exclude *.zip
global-exclude *.tar.gz
global-exclude *.rar

# Exclude notebook checkpoints
global-exclude .ipynb_checkpoints

# Exclude sensitive or large files
global-exclude *.key
global-exclude *.pem
global-exclude *.p12
global-exclude *.pkl
global-exclude *.parquet
global-exclude *.h5
global-exclude *.hdf5
global-exclude *.db
global-exclude *.sqlite*
